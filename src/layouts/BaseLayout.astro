---
import '../styles/global.css';

const { title = 'Francisco Caetano', description = 'PhD Candidate at Eindhoven University of Technology. Research on generative AI for medical imaging.' } = Astro.props as {
  title?: string;
  description?: string;
};
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/logos/fc.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <div class="mx-auto max-w-3xl px-6 py-12">
      <main><slot /></main>
      <footer class="mt-16 border-t border-gray-200 pt-6 text-sm text-gray-400">
        <span>&copy; {new Date().getFullYear()} Francisco Caetano</span>
      </footer>
    </div>
  </body>
</html>
