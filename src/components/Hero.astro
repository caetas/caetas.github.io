---
import { profile, socialLinks } from '@data/profile';
---
<header class="pb-10">
  <div class="flex flex-col items-center gap-6 sm:flex-row sm:items-start sm:gap-8">
    <img
      src={profile.heroImage}
      alt={profile.name}
      class="h-36 w-36 shrink-0 rounded-full object-cover object-top"
      loading="eager"
    />
    <div class="space-y-3">
      <h1 class="text-2xl font-bold text-gray-900 text-center sm:text-left">{profile.name}</h1>
      <p class="text-base text-gray-600 text-center sm:text-left">{profile.title}</p>
      <p class="text-sm leading-relaxed text-gray-600 text-justify">{profile.summary}</p>
      <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-1 text-sm sm:justify-start">
        <a href={`mailto:${profile.contact.email}`}>{profile.contact.email}</a>
        <span class="text-gray-400">•</span>
        <a href={profile.contact.cv}>CV</a>
        {socialLinks.map((link) => (
          <>
            <span class="text-gray-400">•</span>
            <a href={link.href} target="_blank" rel="noreferrer">{link.label}</a>
          </>
        ))}
      </div>
    </div>
  </div>
</header>
