---
import { profile, socialLinks } from '@data/profile';
---
<section id="top" class="relative border-b border-white/5">
  <div class="mx-auto w-full max-w-6xl px-6 pb-20 pt-28">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,1fr)_360px] lg:items-center">
      <div class="space-y-8">
        <div class="space-y-5">
          <p class="text-xs font-semibold uppercase tracking-[0.4em] text-white/60">{profile.title}</p>
          <h1 class="text-4xl font-semibold text-white md:text-5xl">{profile.name}</h1>
          <p class="text-lg text-white/80 md:text-xl">{profile.tagline}</p>
          <p class="max-w-2xl text-base leading-relaxed text-slate-300 text-justify">
            {profile.summary}
          </p>
        </div>

        <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
          <a
            href={profile.contact.cv}
            class="inline-flex items-center gap-2 rounded-full bg-white px-6 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-200"
          >
            Download CV
            <span aria-hidden="true">â†—</span>
          </a>
          <a
            href={`mailto:${profile.contact.email}`}
            class="inline-flex items-center gap-2 text-sm font-medium text-white/70 transition hover:text-white"
          >
            {profile.contact.email}
          </a>
        </div>

        <div class="flex flex-wrap gap-6 text-sm text-white/60">
          {socialLinks.map((link) => (
            <a href={link.href} target="_blank" rel="noreferrer" class="transition hover:text-white">
              {link.label}
            </a>
          ))}
        </div>
      </div>

      <div class="mx-auto w-full max-w-sm">
        <div class="overflow-hidden rounded-[2.5rem] border border-white/10 bg-white/5">
          <img src={profile.heroImage} alt={profile.name} class="h-full w-full object-cover object-top" loading="lazy" />
        </div>
      </div>
    </div>
  </div>
</section>
