---
import type { Project } from '@data/projects';

const { project } = Astro.props as { project: Project };
---
<article class="group grid gap-6 rounded-3xl border border-white/10 bg-white/5 p-6 transition duration-300 hover:border-white/25 hover:bg-white/10 hover:shadow-floating lg:grid-cols-[minmax(0,1fr)_220px]">
  <div class="space-y-4">
    <div class="flex flex-wrap gap-2 text-xs uppercase tracking-wide text-white/60">
      {project.tags.map((tag) => (
        <span class="rounded-full border border-white/10 px-3 py-1">{tag}</span>
      ))}
    </div>
    <h3 class="text-2xl font-semibold text-white">{project.title}</h3>
    <p class="text-sm leading-relaxed text-slate-300">{project.summary}</p>
    <div class="flex flex-wrap gap-3 pt-2 text-sm font-semibold">
      {project.links.map((link) => (
        <a
          href={link.href}
          class="inline-flex items-center gap-2 rounded-full border border-white/10 px-4 py-2 text-white/80 transition hover:border-brand hover:text-white"
        >
          {link.label}
          <span aria-hidden="true">â†—</span>
        </a>
      ))}
    </div>
  </div>
  <div class="relative overflow-hidden rounded-2xl border border-white/10 bg-slate-900/60">
    <img src={project.image} alt={project.imageAlt} class="h-full w-full object-contain p-6 transition group-hover:scale-105" loading="lazy" />
  </div>
</article>
