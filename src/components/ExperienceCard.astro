---
import type { Experience } from '@data/experience';

const { item } = Astro.props as { item: Experience };
---
<article class="group flex flex-col gap-6 rounded-3xl border border-white/10 bg-white/5 p-6 transition hover:border-white/25 hover:bg-white/10 hover:shadow-floating md:flex-row md:items-center">
  <div class="flex-1 space-y-3">
    <div>
      <h3 class="text-xl font-semibold text-white">{item.role}</h3>
      <p class="text-sm text-brand-light">{item.organization}</p>
    </div>
    <ul class="space-y-2 text-sm text-slate-300">
      {item.bullets.map((bullet) => (
        <li class="flex items-start gap-2">
          <span aria-hidden="true" class="mt-1 h-1.5 w-1.5 rounded-full bg-brand"></span>
          <span>{bullet}</span>
        </li>
      ))}
    </ul>
  </div>
  <div class="flex w-full justify-start md:w-auto md:justify-end">
    <div class="relative overflow-hidden rounded-2xl border border-white/10 bg-slate-900/40 p-4">
      <img src={item.logo} alt={item.logoAlt} class="h-16 w-16 object-contain" loading="lazy" />
    </div>
  </div>
</article>
