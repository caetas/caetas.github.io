---
import type { Experience } from '@data/experience';

const { item } = Astro.props as { item: Experience };
---
<article class="flex flex-col gap-6 rounded-2xl border border-white/10 bg-slate-950/40 p-6 transition duration-300 hover:-translate-y-1 hover:border-white/25 hover:bg-slate-950/60 md:flex-row md:items-center">
  <div class="flex-1 space-y-3">
    <div>
      <p class="text-xs uppercase tracking-[0.3em] text-white/50">{item.organization}</p>
      <h3 class="text-xl font-semibold text-white">{item.role}</h3>
    </div>
    <ul class="space-y-2 text-sm text-white/70">
      {item.bullets.map((bullet) => (
        <li class="flex items-start gap-2">
          <span aria-hidden="true" class="mt-1 h-1 w-1 rounded-full bg-white/40"></span>
          <span>{bullet}</span>
        </li>
      ))}
    </ul>
  </div>
  <div class="flex w-full justify-start md:w-auto md:justify-end">
    <div class="rounded-2xl border border-white/10 bg-slate-900/70 p-4">
      <img src={item.logo} alt={item.logoAlt} class="h-16 w-16 object-contain" loading="lazy" />
    </div>
  </div>
</article>
