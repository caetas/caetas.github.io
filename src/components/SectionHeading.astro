---
const { title, eyebrow, copy } = Astro.props as {
  title: string;
  eyebrow?: string;
  copy?: string;
};
---
<div class="space-y-4">
  {eyebrow && (
    <p class="text-xs font-semibold uppercase tracking-[0.3em] text-brand-light">
      {eyebrow}
    </p>
  )}
  <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
    <h2 class="text-3xl font-semibold text-white md:text-4xl">{title}</h2>
    {copy && <p class="max-w-xl text-sm text-slate-300">{copy}</p>}
  </div>
</div>
