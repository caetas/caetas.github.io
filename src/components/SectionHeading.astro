---
const { title, eyebrow, copy } = Astro.props as {
  title: string;
  eyebrow?: string;
  copy?: string;
};
---
<div class="space-y-3">
  {eyebrow && <p class="text-xs uppercase tracking-[0.4em] text-white/50">{eyebrow}</p>}
  <div class="flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
    <h2 class="text-3xl font-semibold text-white">{title}</h2>
    {copy && <p class="max-w-xl text-sm text-white/60">{copy}</p>}
  </div>
</div>
