---
import type { Publication } from '@data/publications';

const { publication } = Astro.props as { publication: Publication };
---
<div class="py-2">
  <p class="text-sm text-gray-900">
    <span class="font-semibold">{publication.title}</span>
    <br />
    <span class="text-gray-500">{publication.authors}</span>
    <br />
    <span class="italic text-gray-500">{publication.venue}</span>
    {publication.links.length > 0 && (
      <span class="mt-1 block">
        [
        {publication.links.map((link, i) => (
          <>
            {i > 0 && ' | '}
            <a href={link.href} class="text-blue-600 hover:underline">{link.label}</a>
          </>
        ))}
        ]
      </span>
    )}
  </p>
  {publication.highlight && (
    <p class="mt-1 text-xs font-medium text-red-600">{publication.highlight}</p>
  )}
</div>
