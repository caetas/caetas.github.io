---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero.astro';
import SectionHeading from '@components/SectionHeading.astro';
import ProjectCard from '@components/ProjectCard.astro';
import PublicationCard from '@components/PublicationCard.astro';
import ExperienceCard from '@components/ExperienceCard.astro';
import { projects } from '@data/projects';
import { featuredPublications, otherPublications } from '@data/publications';
import { experience } from '@data/experience';
---
<BaseLayout>
  <Hero />

  <section class="mt-16">
    <SectionHeading title="Publications" />
    {featuredPublications.map((publication) => (
      <PublicationCard publication={publication} />
    ))}

    <details class="mt-4">
      <summary class="cursor-pointer text-sm font-medium text-blue-600 hover:underline">Other publications &amp; reviews</summary>
      <div class="mt-2">
        {otherPublications.map((publication) => (
          <PublicationCard publication={publication} />
        ))}
      </div>
    </details>
  </section>

  <section class="mt-16">
    <SectionHeading title="Projects" />
    {projects.map((project) => (
      <ProjectCard project={project} />
    ))}
  </section>

  <section class="mt-16">
    <SectionHeading title="Experience" />
    {experience.map((item) => (
      <ExperienceCard item={item} />
    ))}
  </section>
</BaseLayout>
